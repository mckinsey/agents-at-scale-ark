{
  "name": "@agents-at-scale/ark",
  "version": "0.1.31",
  "description": "ARK CLI - Interactive terminal interface for ARK agents",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ark": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "node --loader ts-node/esm src/index.tsx",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/ --fix && prettier --write src/",
    "lint:check": "eslint src/ && prettier --check src/",
    "postinstall": "echo \"ARK CLI installed! Run 'ark' to try it out.\""
  },
  "keywords": [
    "ark",
    "cli",
    "terminal",
    "ai",
    "agents"
  ],
  "license": "Apache-2.0",
  "author": "McKinsey & Company",
  "repository": {
    "type": "git",
    "url": "https://github.com/mckinsey/agents-at-scale-ark.git",
    "directory": "tools/ark-cli"
  },
  "homepage": "https://github.com/mckinsey/agents-at-scale-ark#readme",
  "bugs": {
    "url": "https://github.com/mckinsey/agents-at-scale-ark/issues"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@types/react": "^19.1.8",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "debug": "^4.4.1",
    "execa": "^9.6.0",
    "ink": "^6.0.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.1.0",
    "open": "^10.2.0",
    "react": "^19.1.0",
    "simple-git": "^3.28.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/debug": "^4.1.12",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
